//working eigher
&lpuart6 {
    status = "okay";
    current-speed = <100000>;   /* SBUS uses 100k baud */
    parity = "even";
    stop-bits = "2";
    pinctrl-0 = <&pinctrl_lpuart6 &pinctrl_lpuart6>; /* default + sleep */
    pinctrl-names = "default", "sleep";
    label = "UART_6";
};

&pinctrl {
    pinctrl_lpuart6: lpuart6grp {
        fsl,pins = <
            0x0003 0x0000   /* mux = 3 (LPUART6_RX), pad = 0 (default) */
        >;
    };
};

